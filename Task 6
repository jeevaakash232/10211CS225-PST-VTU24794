import java.util.Scanner;

public class SumOfPowerDigits {

    static int sumOfPowerDigits(int n) {
        int temp = n;
        int sum = 0;
        int digits = String.valueOf(n).length();

        if (n == 0) {
            return 0;
        }

        while (temp > 0) {
            int d = temp % 10;
            sum += (int) Math.pow(d, digits);
            temp /= 10;
        }

        return sum;
    }
